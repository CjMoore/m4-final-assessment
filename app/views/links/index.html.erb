<h1>Welcome</h1>

<div class="row">
  <div class="col s3">
    <p></p>
  </div>
  <div class="col s6">
    <div class="card" id="link-form">
      <div class="card-content">
        <span class="card-title">Add a link</span>
        <%= form_for @link, url: '/links' do |f| %>
          <%= f.label :url %>
          <%= f.text_field :url %>

          <%= f.label :title %>
          <%= f.text_field :title %>

          <%= f.submit "Add Link" %>
        <% end %>
      </div>
      <div class="card-action">

      </div>
    </div>
  </div>
</div>
